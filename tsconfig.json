{
  "compilerOptions": {
    "target": "es2019",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ]
  },
  "include": [
    "@types/**/*",
    "src",
    "lib"
  ],
  "exclude": [
    "node_modules"
  ]
}